<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-rooms-table" author="system">
        <createTable tableName="rooms">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="theme" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="current_word" type="VARCHAR(255)"/>
            <column name="current_leader_id" type="BIGINT"/>
            <column name="word_provider_type" type="VARCHAR(50)"/>
            <column name="last_activity" type="TIMESTAMP"/>
        </createTable>
        <createIndex tableName="rooms" indexName="idx_rooms_code">
            <column name="code"/>
        </createIndex>
        <createIndex tableName="rooms" indexName="idx_rooms_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-players-table" author="system">
        <createTable tableName="players">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="session_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="score" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_leader" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="joined_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="players" indexName="idx_players_room_id">
            <column name="room_id"/>
        </createIndex>
        <createIndex tableName="players" indexName="idx_players_session_id">
            <column name="session_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-create-words-table" author="system">
        <createTable tableName="words">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="word" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="theme" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="VARCHAR(10)" defaultValue="ru"/>
        </createTable>
        <createIndex tableName="words" indexName="idx_words_theme">
            <column name="theme"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-create-game-history-table" author="system">
        <createTable tableName="game_history">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="word" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="leader_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="winner_id" type="BIGINT"/>
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP"/>
        </createTable>
        <createIndex tableName="game_history" indexName="idx_game_history_room_id">
            <column name="room_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

