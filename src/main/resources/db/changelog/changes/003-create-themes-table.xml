<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-themes-table" author="system">
        <createTable tableName="themes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="themes" indexName="idx_themes_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-migrate-themes-from-words" author="system">
        <sql>
            INSERT INTO themes (name, created_at)
            SELECT DISTINCT theme, NOW()
            FROM words
            WHERE theme IS NOT NULL
            ORDER BY theme;
        </sql>
    </changeSet>

    <changeSet id="005-add-custom-theme-to-rooms" author="system">
        <addColumn tableName="rooms">
            <column name="custom_theme" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>

